{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    "dialog:default",
    {
      "identifier": "fs:allow-read",
      "allow": [
        { "path": "$APPDATA/**" }
      ]
    },
    {
      "identifier": "fs:allow-write",
      "allow": [
        { "path": "$DOWNLOAD/**" },
        { "path": "$DESKTOP/**" },
        { "path": "$DOCUMENT/**" },
        { "path": "$AUDIO/**" }
      ]
    },
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$APPDATA/**" },
        { "path": "$DOWNLOAD/**" },
        { "path": "$DESKTOP/**" },
        { "path": "$DOCUMENT/**" },
        { "path": "$AUDIO/**" }
      ]
    }
  ]
}
